<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/iv_main_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:background="@drawable/leaf" />
    
    <TextView 
        android:id="@+id/tv_main_current_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_main_map"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/current_location"
        android:textSize="18sp"
        />
    
    <TextView 
        android:id="@+id/tv_main_current_location_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_main_map"
        android:layout_toRightOf="@id/tv_main_current_location"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        />
    
    <TextView 
        android:id="@+id/tv_main_current_location_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_main_current_location_x"
        android:layout_alignLeft="@id/tv_main_current_location_x"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        />
    
    <Button 
        android:id="@+id/btn_main_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_main_current_location_y"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/record"
        />
    
    <Button 
        android:id="@+id/btn_main_cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_main_record"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/cal"
        />
    

</RelativeLayout>